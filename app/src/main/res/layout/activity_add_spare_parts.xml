<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ActivityAddSpareParts">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/backward_arrow" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/logo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginBottom="16dp"
            android:textSize="17sp"
            android:text="Part Image" />

        <EditText
            android:id="@+id/prtname"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/poppinregular"
            android:hint="Enter PartName"
            android:inputType="text"
            android:background="@drawable/shapelogin"
            android:paddingStart="9dp"
            />
        <EditText
            android:id="@+id/prtprize"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/title"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/poppinregular"
            android:hint="Enter PartPrize"
            android:inputType="textEmailAddress"
            android:background="@drawable/shapelogin"
            android:paddingStart="9dp"/>
        <EditText
            android:id="@+id/prtbrand"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/title"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/poppinregular"
            android:hint="Enter PartBrand"
            android:background="@drawable/shapelogin"
            android:paddingStart="9dp" />

        <EditText
            android:id="@+id/prttype"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/title"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shapelogin"
            android:fontFamily="@font/poppinregular"
            android:hint="Enter PartType"
            android:paddingStart="9dp" />
        <EditText
            android:id="@+id/prtavailability"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="number"
            android:layout_below="@id/title"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shapelogin"
            android:fontFamily="@font/poppinregular"
            android:hint="Enter PartAvailableQuantity"
            android:paddingStart="9dp" />
        <EditText
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/title"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shapelogin"
            android:fontFamily="@font/poppinregular"
            android:hint="Enter PartDescription"
            android:paddingStart="9dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/forgot_password"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="50dp"
            android:text="Add"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
            android:fontFamily="monospace"/>



    </LinearLayout>
</ScrollView>